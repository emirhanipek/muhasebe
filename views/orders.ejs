            <!-- Sample Order Data -->
            <tr>
              <td class="px-6 py-3">24</td>
              <td class="px-6 py-3">T-321</td>
              <td class="px-6 py-3">12/12/2025</td>
              <td class="px-6 py-3">300</td>
              <td class="px-6 py-3">BONDNON</td>
              <td class="px-6 py-3">
